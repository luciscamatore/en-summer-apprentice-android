<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gri_misto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fontFamily="@font/monsterrat">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:id="@+id/cardViewOrderID">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

<!--            <com.google.android.material.imageview.ShapeableImageView-->
<!--                app:shapeAppearanceOverlay="@style/roundedImageView"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="150dp"-->
<!--                android:layout_margin="10dp"-->
<!--                android:id="@+id/imageView"-->
<!--                android:src="@drawable/electriccastle"/>-->

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderEventName"
                    android:textColor="@color/gri_misto"
                    android:fontFamily="@font/monsterrat_bold"
                    android:text="Event Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nrTickets"
                    android:textColor="@color/gri_misto"
                    android:text="Number of Tickets" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gri_misto"
                    android:text="Price" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>